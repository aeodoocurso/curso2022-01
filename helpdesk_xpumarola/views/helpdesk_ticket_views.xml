<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="helpdesk_ticket_view_form">
      <field name="name">Helpdesk Tickets</field>
      <field name="model">helpdesk.ticket</field>
      <field name="arch" type="xml">
        <form>
          <group>
            <group>
              <field name='name'/>
              <field name='description'/>
              <field name='date'/>
            </group>
            <group>
              <field name='limit_date'/>
              <field name='assigned'/>
              <field name='acctions_todo'/>
            </group>
          </group>
        </form>
      </field>
    </record>

    <record id="helpdesk_ticket_view_tree" model="ir.ui.view">
      <field name="name">Helpdesk Ticket</field>   
      <field name="model">helpdesk.ticket</field>   
      <field name="arch" type="xml">
          <tree>       
              <field name="name"/>       
              <field name="date"/>     
          </tree>  
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="helpdesk_ticket_action">
      <field name="name">Helpdesk Tickets</field>
      <field name="res_model">helpdesk.ticket</field>
      <field name="view_mode">tree,form</field>
    </record>


