<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_partner_card">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
                    <div class="page">

                        <div class="oe_structure"/>

                        <div class="row mt32 mb32" style="page-break-after: always;">
                            <div class="col-auto col-8 mw-100 mb-2">
                                <strong>Partner:</strong>
                                <div t-field="doc.name"/>
                            </div>
                            <div class="col-auto col-4 mw-100 mb-2">
                                <img t-if="doc.image_1920" t-att-src="image_data_uri(doc.image_1920)" alt="Logo"/>
                            </div>
                        </div>

                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
