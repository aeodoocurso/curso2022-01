<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_helpdesk_ticket_tag_tree" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.tag.tree</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="html">
            <tree string="Tags">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_helpdesk_ticket_tag_form" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.tag.form</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="html">
            <form string="Tags">
                <sheet>
                    <header>
                        <button name="%(helpdesk_rubenseijas.create_ticket_action)d"  string="Create Tickets" type="action" class="btn-primary" data-hotkey="w"/>
                    </header>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Tag Name"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group name="main">
                        <field name="description"/>
                    </group>
                    <group name="Tickets">
                        <field name="ticket_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_helpdesk_ticket_tag_search" model="ir.ui.view">
        <field name="name">view.helpdesk_ticket_tag.search</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="xml">
            <search string="Helpdesk Tags">
                <field name="name" />
                <group string="Group By" name="groupby">
                    <filter name="name_groupby" string="Name" context="{'group_by': 'name'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="helpdesk_ticket_tag_action" model="ir.actions.act_window">
        <field name="name">Helpdesk Ticket Tag</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new tag
            </p>
        </field>
    </record>

    <record id="helpdesk_ticket_new_tag_action" model="ir.actions.act_window">
        <field name="name">Helpdesk Tickets New Tag</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.tag</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <!-- <field name="context">{}</field> -->
    </record>
    
</odoo> 