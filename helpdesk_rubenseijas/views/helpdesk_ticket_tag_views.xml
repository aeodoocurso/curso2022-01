<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_helpdesk_ticket_tag_tree" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.tag.tree</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="html">
            <tree string="Tags">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_helpdesk_ticket_tag_form" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.tag.form</field>
        <field name="model">helpdesk.ticket.tag</field>
        <field name="arch" type="html">
            <form string="Tags">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Tag Name"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group name="main">
                        <group name="DescripciÃ³n">
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_helpdesk_ticket_tags" model="ir.actions.act_window">
        <field name="name">Helpdesk Tickets Tags</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.tag</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new tag
            </p>
        </field>
    </record>

    <menuitem id="helpdesk_ticket_tag_menu" name="Tags" sequence="12" parent="helpdeks_menu" action="action_helpdesk_ticket_tags"/>

</odoo> 