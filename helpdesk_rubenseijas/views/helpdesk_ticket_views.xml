<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_helpdesk_tickets_tree" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="html">
            <tree string="Tickects">
                <field name="sequence" widget="habdle"/>
                <field name="name"/>
                <field name="user_id"/>
                <field name="date" optional="show"/>
                <field name="limit_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_helpdesk_tickets_form" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="html">
            <form string="Tickects">
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Idea Name"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group name="main" string="Ticket">
                        <group name="User">
                            <field name="user_id"/>
                            <field name="assigned"/>
                        </group>
                        <group name="Dates">
                            <field name="date"/>
                            <field name="limit_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group name="DescripciÃ³n">
                                <field name="description" nolabel="1"/>
                            </group>
                        </page> 
                        <page string="Actions">
                            <group>
                                <field name="actions_todo"/>
                            </group>
                        </page> 
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="helpdesk_ticket_action_all" model="ir.actions.act_window">
        <field name="name">Helpdesk Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new ticket
            </p>
        </field>
    </record>

    <menuitem id="helpdeks_menu" name="Helpdesk" sequence="10"/>
    <menuitem id="helpdeks_tickets_menu" name="Tickets" sequence="10" parent="helpdeks_menu"/>
    <menuitem id="all_helpdesk_tickets_menu" name="All Tickets" sequence="10" parent="helpdeks_tickets_menu" action="helpdesk_ticket_action_all"/>

</odoo> 