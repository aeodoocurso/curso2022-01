<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_helpdesk_tickets_tree" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.tree</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="html">
            <tree string="Tickects">
                <field name="sequence" widget="habdle"/>
                <field name="name"/>
                <field name="user_id"/>
                <field name="date" optional="show"/>
                <field name="limit_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_helpdesk_tickets_form" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.form</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="html">
            <form string="Tickects">
                <field name="color" invisible="1"/>
                <header>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Ticket Name"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group name="main">
                        <group name="User">
                            <field name="user_id" options="{'no_quick_create': True}"/>
                            <field name="user_email"/>
                            <field name="ticket_company" />
                            <field name="partner_id" options="{'no_quick_create': True, 'no_open': True}" domain="[('is_company', '=', ticket_company)]"/>
                            <field name="partner_email"/>
                            <field name="assigned"/>
                        </group>
                        <group name="Dates">
                            <field name="date"/>
                            <field name="date_start"/>
                            <field name="limit_date"/>
                            <field name="time" widget="float_time"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group name="Descripción">
                                <field name="description" nolabel="1"/>
                            </group>
                        </page> 
                        <page string="Actions Todo">
                            <group>
                                <field name="actions_todo"/>
                            </group>
                        </page> 
                        <page string="Actions Done">
                            <button string="Review" name="review_actions" type="object" class="btn-primary"/>
                             <group>
                                <!-- Formularios por defecto -->
                                <!-- <field name="action_ids" nolabel="1"/> -->
                                <!-- Formularios personalizados -->
                                <!-- <field name="action_ids" nolabel="1">
                                    <tree string="Action" editable="bottom">
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="dedicated_time"/>
                                        <field name="ticket_id"/>
                                    </tree>
                                </field> -->
                                <!-- Formularios con vistas relacionadas -->
                                <field name="action_ids" nolabel="1" context="{'default_user_id': user_id, 'tree_view_ref': 'helpdesk_rubenseijas.view_helpdesk_ticket_action_tree', 'form_view_ref': 'helpdesk_rubenseijas.view_helpdesk_ticket_action_tree'}"/>
                             </group>
                        </page> 
                        <page string="Tags">
                            <group name="Tag">
                                <field name="tag_name"/>
                                <!-- Llamar método -->
                                <button string="Create" name="create_and_link_tag" type="object" class="btn-primary"/>
                                <!-- Llamar acción -->
                                <button string="Create Pop Up" name="%(helpdesk_rubenseijas.helpdesk_ticket_new_tag_action)d" 
                                    type="action" class="btn-primary"
                                    context="{'default_name': tag_name}"/>
                             </group>
                            <group>
                                <field name="tag_ids" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Añadir vista search -->
    <record id="helpdesk_tickets_view_search" model="ir.ui.view">
        <field name="name">helpdesk_ticket.view.search</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <search string="Tickets">
                <!-- filtrar por nombre y por usuario asignado -->
                <field name="name" />
                <field name="user_id" />
                <!-- filtrar tickets asignados -->
                <filter name="user_assigned" string="User Assigned" domain="[('user_id', '=', False)]" />
                <!-- filtrar tickets sin limit_date-->
                <filter name="no_date" string="No Date" domain="[('date', '=', False)]" />
                <group name="group_by" string="Group By">
                    <!-- agrupar por limit_date -->
                    <filter name="limit_date" string="Limit Date" context="{'group_by':'limit_date'}" />
                    <!-- agrupar por usuario asignado -->
                    <filter name="user_id" string="User" context="{'group_by':'user_id'}" />
                </group>
            </search>
        </field>
    </record>

    <record id="helpdesk_tickets_view_kanban" model="ir.ui.view">
        <field name="name">helpdesk.ticket.view.kanban</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <kanban default_group_by="user_id">
                <field name="name" />
                <field name="user_id" />
                <field name="date" />
                <field name="color" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="#{!selection_mode ? kanban_color(record.color.raw_value) : ''} oe_kanban_global_click oe_kanban_card d-flex flex-column">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-toggle="dropdown" data-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <t t-if="widget.editable"><a role="menuitem" type="edit" class="dropdown-item">Edit</a></t>
                                    <t t-if="widget.deletable"><a role="menuitem" type="delete" class="dropdown-item">Delete</a></t>
                                    <ul class="oe_kanban_colorpicker" data-field="color"/>
                                </div>
                            </div>
                            <div class="oe_kanban_content flex-grow-1">
                                <div class="o_kanban_record_title oe_kanban_details">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="o_kanban_record_subtitle">
                                    User: <field name="user_id" />
                                    Date: <field name="date" />
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left"/>
                                    <div class="oe_kanban_bottom_right">
                                        <field name="user_id" widget="many2one_avatar_user"/>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_clear"/>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="helpdesk_ticket_view_pivot" model="ir.ui.view">
        <field name="name">helpdesk.ticket.view.pivot</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <pivot string="Tikets Analisys" disable_linking="true">
                <field name="user_id" type="col"/>
                <field name="date" type="row" />
                <field name="time" widget="float_time" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="helpdesk_ticket_view_graph" model="ir.ui.view">
        <field name="name">helpdesk.ticket.view.graph</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <graph string="Tickets" type="pie">
                <field name="user_id" />
                <field name="time" widget="float_time" type="measure" />
            </graph>
        </field>
    </record>

    <record id="helpdesk_ticket_view_calendar" model="ir.ui.view">
        <field name="name">helpdesk.ticket.view.calendar</field>
        <field name="model">helpdesk.ticket</field>
        <field name="arch" type="xml">
            <calendar string="Tickets" date_start="date" color="state" event_limit="5">
                <field name="name" />
                <field name="user_id" />
                <field name="state" invisible="1"/>
            </calendar>
        </field>
    </record>

    <record id="helpdesk_ticket_action_all" model="ir.actions.act_window">
        <field name="name">Helpdesk Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket</field>
        <field name="view_mode">tree,kanban,pivot,graph,calendar,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new ticket
            </p>
        </field>
    </record>

    <menuitem id="helpdesk_menu" name="Helpdesk" sequence="10"/>
    <menuitem id="helpdesk_config_menu" name="Config" sequence="99" parent="helpdesk_menu"/>
    <menuitem id="helpdesk_tickets_menu" name="Tickets" sequence="10" parent="helpdesk_menu"/>
    <menuitem id="helpdesk_tickets_all_menu" name="All Tickets" sequence="10" parent="helpdesk_tickets_menu" action="helpdesk_ticket_action_all"/>

    <menuitem id="helpdesk_ticket_tag_menu" name="Tags" parent="helpdesk_config_menu" action="helpdesk_rubenseijas.helpdesk_ticket_tag_action" sequence="20"/>
    <menuitem id="helpdesk_ticket_action_menu" name="Actions" sequence="15" parent="helpdesk_config_menu" action="helpdesk_rubenseijas.helpdesk_ticket_action_action"/>


</odoo> 