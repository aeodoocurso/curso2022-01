<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_helpdesk_ticket_action_tree" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.action.tree</field>
        <field name="model">helpdesk.ticket.action</field>
        <field name="arch" type="html">
            <tree string="Actions">
                <field name="name"/>
                <field name="description"/>
                <field name="user_id"/>
                <field name="dedicated_time"/>
                <field name="ticket_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_helpdesk_ticket_action_form" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.action.form</field>
        <field name="model">helpdesk.ticket.action</field>
        <field name="arch" type="html">
            <form string="Actions">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Action Name"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group name="main" string="Action">
                        <group name="DescripciÃ³n">
                            <field name="description"/>
                            <field name="user_id"/>
                        </group>
                        <group name="Dedicated Time">
                            <field name="dedicated_time"/>
                        </group>
                        <group name="Ticket">
                            <field name="ticket_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="helpdesk_ticket_action_action" model="ir.actions.act_window">
        <field name="name">Helpdesk Tickets Actions</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">helpdesk.ticket.action</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new action
            </p>
        </field>
    </record>

</odoo> 