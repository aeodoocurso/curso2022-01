<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tree View -->
    <record id="view_helpdesk_ticket_action_tree" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.action.tree</field>
        <field name="model">helpdesk.ticket.action</field>
        <field name="arch" type="html">
            <tree string="Actions">
                <field name="name"/>
                <field name="description"/>
                <field name="dedicated_time"/>
                <field name="ticket_id"/>
            </tree>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_helpdesk_ticket_action_form" model="ir.ui.view">
        <field name="name">view.helpdesk.ticket.action.form</field>
        <field name="model">helpdesk.ticket.action</field>
        <field name="arch" type="html">
            <form string="Actions">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" string="Action Name"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group name="main" string="description">
                        <group name="DescripciÃ³n">
                            <field name="description" nolabel="1"/>
                        </group>
                        <group name="Dedicated Time">
                            <field name="dedicated_time" nolabel="1"/>
                        </group>
                        <group name="Ticket">
                            <field name="ticket_id" nolabel="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="helpdesk_ticket_action_menu" name="Actions" sequence="12" parent="helpdeks_menu"/>

</odoo> 