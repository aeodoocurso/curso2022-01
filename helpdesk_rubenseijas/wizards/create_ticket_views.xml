<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_create_ticket_form" model="ir.ui.view">
        <field name="name">view.create.ticket.form</field>
        <field name="model">create.ticket</field>
        <field name="arch" type="xml">
            <form string="Create Ticket">
                <sheet>
                    <group name="main">
                        <field name="name"/>
                        <field name="tag_ids"/>
                    </group>
                    <footer>
                        <button name="create_tickets" id="create_tickets" string="Create Tickets" type="object" data-hotkey="w"/>
                        <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <record id="create_ticket_action" model="ir.actions.act_window">
        <field name="name">Create Tickets</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">create.ticket</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <!-- TODO: check if we need this -->
        <field name="binding_model_id" ref="helpdesk_rubenseijas.model_helpdesk_ticket_tag" />
        <field name="binding_view_types">list</field>
    </record>

    <!-- <menuitem id="create_ticekt_menu" name="Create Ticket" sequence="10" parent="helpdesk_rubenseijas.helpdesk_ticket_tag_menu" action="helpdesk_rubenseijas.create_ticket_action"/> -->
</odoo>